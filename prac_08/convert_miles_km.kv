BoxLayout:
    orientation: 'vertical'
    padding: 10
    spacing: 10

    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: '100dp'

        TextInput:
            id: input_miles
            text: '0'
            font_size: 48
            multiline: False
            on_text: app.handle_convert(self.text)

        BoxLayout:
            orientation: 'vertical'
            size_hint_x: None
            width: '100dp'
            spacing: 10

            Button:
                text: 'Up'
                font_size: 24
                on_press: app.handle_increment(1)

            Button:
                text: 'Down'
                font_size: 24
                on_press: app.handle_increment(-1)

    Label:
        text: 'Convert miles to km'
        font_size: 24
        color: (1, 1, 1, 1)
        size_hint_y: None
        height: '50dp'
        background_color: (0.5, 0.5, 0.5, 1)

    Label:
        id: output_label
        text: app.km_result
        font_size: 48
        color: (1, 1, 0, 1)
        size_hint_y: None
        height: '60dp'
        background_color: (0, 0, 0, 1)